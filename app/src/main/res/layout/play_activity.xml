<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="dp_16"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textviewSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_156"
        android:layout_marginStart="@dimen/dp_156"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_120"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCover"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageCover"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_15"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/buttonLike"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:src="@drawable/ic_like" />

        <ImageView
            android:id="@+id/buttonDowload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:src="@drawable/ic_dowload" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_68"
            android:thumbTint="@color/colorWhite" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonDowload"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginStart="@dimen/dp_22"
            android:gravity="left"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/buttonDowload"
            android:gravity="right"
            android:textColor="@color/colorWhite" />


        <ImageView
            android:id="@+id/imageViewPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_36"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <ImageView
            android:id="@+id/imagePrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageViewPlayPause"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginStart="@dimen/dp_90"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageView
            android:id="@+id/imageNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageViewPlayPause"
            android:layout_marginRight="@dimen/dp_90"
            app:srcCompat="@android:drawable/ic_media_next" />

        <ImageView
            android:id="@+id/imageLoop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonDowload"
            android:layout_alignRight="@+id/buttonDowload"
            android:layout_alignTop="@+id/imageViewPlayPause"
            android:src="@drawable/ic_loop" />

        <ImageView
            android:id="@+id/imageShuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/duration"
            android:layout_alignStart="@+id/duration"
            android:layout_alignTop="@+id/imageViewPlayPause"
            android:src="@drawable/suffle" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
